.Chat-main
  .Chat-main__group-info
    .group-info
      .group-info__left
        .group-info__left--name
          = @group.name
        .group-info__left--member
          Member :
          - @group.users.each do |user|
            = user.name
      .group-info__right
        = link_to edit_group_path(@group), class: "edit-btn" do
          Edit
  .Chat-main__message-list
    = render @messages
  .Chat-main__message-form
    = form_with model: [@group, @message], html: {class: "form__contents"}, local: true do |f|
      .form__input
        = f.text_field :content, class: 'form__input--text', placeholder: 'type a message'
        = f.label :image, class: 'form__input--img' do
          = icon('far', 'image')
          = f.file_field :image, class: 'file-text'
      = f.submit 'Send', class: 'form__submit--btn'
