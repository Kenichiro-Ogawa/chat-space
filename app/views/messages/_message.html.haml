.tweet-block{data: {message: {id: message.id}}}
  .tweet-block__content
    .tweet-block__content--name
      = message.user.name
    .tweet-block__content--date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .tweet-block__message
    - if message.content.present?
      %p.message__content
        = message.content
    = image_tag message.image.url, class: 'message__img' if message.image.present?